<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.choonhee.hack2hired_21.activity.activity.BookSearchActivity">

    <TextView
        android:id="@+id/search_book_title"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:text="Title Of Book"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="45dp" />

    <ListView
        android:id="@+id/book_search_list"
        android:layout_width="395dp"
        android:layout_height="450dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/search_book_title"
        tools:layout_editor_absoluteX="8dp" />
</android.support.constraint.ConstraintLayout>
